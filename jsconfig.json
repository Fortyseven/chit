{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": false,
		// "module": "ESNext",
		// "moduleResolution": "bundler"
		"baseUrl": "src",
		"paths": {
			"$lib/*": [
				"lib/*"
			],
			"$stores/*": [
				"stores/*"
			],
		}
	}
}